<?php
session_start(); include 'db.php';
if ($_SERVER['REQUEST_METHOD']!=='POST'){ http_response_code(405); exit; }
if (!isset($_SESSION['user_id']) || $_SESSION['role']!=='admin'){ echo json_encode(['success'=>false,'error'=>'Unauthorized']); exit; }
$request_id = intval($_POST['request_id'] ?? 0); $technician_id = intval($_POST['technician_id'] ?? 0);
if (!$request_id || !$technician_id) { echo json_encode(['success'=>false,'error'=>'Missing fields']); exit; }
$stmt = $conn->prepare("UPDATE maintenance_requests SET technician_id=?, status='Assigned' WHERE request_id=?");
$stmt->bind_param('ii', $technician_id, $request_id);
if ($stmt->execute()) echo json_encode(['success'=>true]); else echo json_encode(['success'=>false,'error'=>$stmt->error]);
?>